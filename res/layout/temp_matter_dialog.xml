<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/dialog_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
        android:textSize="@android:attr/textAppearanceMedium" >
    </TextView>
    
    <TextView
        android:id="@+id/dialog_profile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_agenda"
        android:textSize="@android:attr/textAppearanceMedium" >
    </TextView>
    
    <TextView
        android:id="@+id/dialog_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@android:attr/textAppearanceMedium" />
</LinearLayout>