<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_rectangle_margin"
    android:background="@drawable/gray_rectangle_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="UselessParent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:shrinkColumns="0,1"
                android:stretchColumns="0,1" >

                <TableRow>

                    <ImageButton
                        android:id="@+id/ib_routine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:contentDescription="@string/imgMissing"
                        android:scaleType="fitCenter"
                        android:src="@drawable/r1_routine"
                        android:text="@string/routine" >
                    </ImageButton>

                    <ImageButton
                        android:id="@+id/ib_tempmatter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:contentDescription="@string/imgMissing"
                        android:scaleType="fitCenter"
                        android:src="@drawable/r2_tempmatter" >
                    </ImageButton>
                </TableRow>

                <TableRow>

                    <ImageButton
                        android:id="@+id/ib_customeProfile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:contentDescription="@string/imgMissing"
                        android:scaleType="fitCenter"
                        android:src="@drawable/r3_customeprofile" >
                    </ImageButton>

                    <ImageButton
                        android:id="@+id/ib_setting"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:contentDescription="@string/imgMissing"
                        android:scaleType="fitCenter"
                        android:src="@drawable/r4_setting" >
                    </ImageButton>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <edu.tongji.sse.profileexpert.calendar.MyCalendarView
                    android:id="@+id/my_calendar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/my_calendar_padding_top"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>
        
    </ScrollView>

</RelativeLayout>